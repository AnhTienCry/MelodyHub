{
  "compilerOptions": {
    // File layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment settings — dùng cho Node + Docker
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],

    // Output configs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strict options
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Recommended for Node backend
    "esModuleInterop": true,
    "isolatedModules": false,
    "resolveJsonModule": true
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
